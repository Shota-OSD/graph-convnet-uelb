{
    "expt_name": "rl_finetuning",
    "gpu_id": "0",
    "use_gpu": true,

    "graph_filepath": "./data/graph.gml",
    "edge_numbering_filepath": "./data/edge_numbering_file.csv",
    "train_filepath": "./data/gragh.gml",
    "val_filepath": "./data/tsp10_val_concorde.txt",
    "test_filepath": "./data/tsp10_test_concorde.txt",

    "solver_type": "pulp",
    "graph_model": "random",

    "num_train_data": 100,
    "num_test_data": 20,
    "num_val_data": 20,
    "num_nodes": 14,
    "num_commodities": 5,
    "sample_size": 5,
    "capacity_lower": 1000,
    "capacity_higher": 10000,
    "demand_lower": 5,
    "demand_higher": 500,

    "node_dim": 10,
    "voc_nodes_in": 30,
    "voc_nodes_out": 2,
    "voc_edges_in": 3,
    "voc_edges_out": 1,
    "_comment_voc": "voc_edges_out=1 for RL (edge scores). Will be initialized from supervised model (voc_edges_out=2) using logit difference",

    "beam_size": 10,
    "hidden_dim": 64,
    "num_layers": 5,
    "mlp_layers": 2,
    "aggregation": "mean",

    "max_epochs": 15,
    "val_every": 3,
    "test_every": 3,

    "batch_size": 20,
    "accumulation_steps": 1,

    "learning_rate": 0.001,
    "decay_rate": 1.5,
    "dropout_rate": 0.2,

    "_comment_strategy": "=== Training Strategy: Reinforcement Learning Fine-tuning ===",
    "training_strategy": "reinforcement",
    "rl_reward_type": "load_factor",
    "rl_use_baseline": true,
    "rl_baseline_momentum": 0.95,
    "rl_entropy_weight": 0.1,
    "rl_use_trajectory_entropy": true,
    "rl_entropy_epsilon": 0.05,

    "_comment_sampling": "=== Sampling Configuration ===",
    "rl_use_sampling": true,
    "rl_sampling_temperature": 1.5,
    "rl_min_temperature": 0.8,
    "rl_temperature_decay": 0.035,
    "rl_sampling_top_p": 0.95,
    "rl_normalize_advantages": true,
    "rl_use_smooth_penalty": true,
    "rl_penalty_lambda": 5.0,
    "rl_mask_invalid_edges": true,

    "_comment_beam_search": "=== Beam Search Configuration ===",
    "rl_beam_search_type": "unconstrained",
    "_beam_search_note": "unconstrained = no capacity constraints during path search",

    "_comment_pretrained": "=== Pre-trained Model Loading ===",
    "load_pretrained_model": true,
    "pretrained_model_path": "saved_models/model_82250eaf_latest.pt",
    "convert_supervised_to_rl": true,
    "_conversion_note": "Convert voc_edges_out=2 (supervised) to voc_edges_out=1 (RL) using logit difference method"
}
