{
    "expt_name": "gcn_rl_unconstrained",
    "gpu_id": "0",
    "use_gpu": true,
    "load_saved_model": false,

    "graph_filepath": "./data/graph.gml",
    "edge_numbering_filepath": "./data/edge_numbering_file.csv",
    "train_filepath": "./data/gragh.gml",
    "val_filepath": "./data/tsp10_val_concorde.txt",
    "test_filepath": "./data/tsp10_test_concorde.txt",

    "solver_type": "pulp",
    "graph_model": "random",

    "num_train_data": 100,
    "num_test_data": 20,
    "num_val_data": 20,
    "num_nodes": 14,
    "num_commodities": 5,
    "sample_size": 5,
    "capacity_lower": 1000,
    "capacity_higher": 10000,
    "demand_lower": 5,
    "demand_higher": 500,

    "node_dim": 10,
    "voc_nodes_in": 30,
    "voc_nodes_out": 2,
    "voc_edges_in": 3,
    "voc_edges_out": 1,
    "_comment_voc": "voc_edges_out=1 for RL (edge scores), =2 for supervised (binary classification)",

    "beam_size": 10,
    "hidden_dim": 64,
    "num_layers": 5,
    "mlp_layers": 2,
    "aggregation": "mean",

    "max_epochs": 30,
    "val_every": 5,
    "test_every": 5,

    "batch_size": 20,
    "accumulation_steps": 1,

    "learning_rate": 0.0001,
    "decay_rate": 1.5,
    "dropout_rate": 0.2,

    "_comment": "=== Training Strategy Configuration ===",
    "training_strategy": "reinforcement",
    "rl_reward_type": "load_factor",
    "reward_function_version": "continuous_v1",
    "rl_use_baseline": true,
    "rl_baseline_momentum": 0.98,
    "rl_entropy_weight": 0.01,
    "rl_use_trajectory_entropy": true,
    "rl_entropy_epsilon": 0.05,

    "_comment_sampling": "=== Sampling Configuration (top-p sampling for training, beam search for evaluation) ===",
    "rl_use_sampling": true,
    "rl_sampling_temperature": 1.0,
    "rl_min_temperature": 0.5,
    "rl_temperature_decay": 0.02,
    "rl_sampling_top_p": 0.95,
    "rl_normalize_advantages": true,
    "rl_use_smooth_penalty": true,
    "rl_penalty_lambda": 5.0,
    "rl_mask_invalid_edges": true,

    "_comment_beam_search": "=== Beam Search Configuration (used during evaluation) ===",
    "rl_beam_search_type": "unconstrained",
    "_beam_search_note": "unconstrained = no capacity constraints during path search",

    "_comment_debug": "=== Debug Configuration ===",
    "rl_debug_logging": false,
    "rl_debug_log_frequency": 20,
    "rl_grad_log_frequency": 10,
    "rl_grad_zero_threshold": 1e-8,
    "rl_debug_log_max_samples": 5,

    "_comment_grad_control": "=== Gradient Explosion Detection & Clipping ===",
    "rl_detect_grad_explosion": false,
    "rl_grad_explosion_threshold": 10.0,
    "rl_grad_norm_history_size": 100,
    "rl_grad_clip_max_norm": 1.0,
    "_grad_clip_note": "Set to 0 to disable gradient clipping"
}
